mixin pager-rounded
	+s4
	div.pager-rounded
		ul
			li.prev
				a
					i.fa.fa-angle-left
			li.first
				a.active 1
			li
				a 2
			li
				a 3
			li
				a 4
			li.last
				a 5
			li.next
				a
					i.fa.fa-angle-right

