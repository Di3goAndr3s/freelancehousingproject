mixin pager2
	+s4
	div.pager
		ul
			li
				a
					i.fa.fa-chevron-left
			li.active
				a 1
			each val in [2, 3, 4, 5, '>']
				li
					a= val

mixin pager
	+s4
	div.pager
		ul
			li
				a
					i.fa.fa-chevron-left
			li
				a.active 1
			li
				a 2
			li
				a 3
			li
				a 4
			li
				a 5
			li
				a
					i.fa.fa-chevron-right

