mixin button-icon(href, value, ident, icon)
	- href = href || '#'
	- value = value || 'Lorem Ipsum'
	- ident = ident || ''
	- icon = icon || 'info'
	a(href="#{href}", title="", class="#{ident} button-icon")
		i(class='fa fa-#{icon}')
		| #{value}

mixin submit-icon(value, ident, icon)
	- value = value || 'Lorem Ipsum'
	- ident = ident || ''
	- icon = icon || 'info'
	div(class="#{ident} submit-icon")
		input(type="submit", title="#{value}", value='#{value}')
		i(class='fa fa-#{icon}')