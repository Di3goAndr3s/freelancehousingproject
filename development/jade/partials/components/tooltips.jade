//- TOOLTIPS

//- tooltip

mixin tooltip(info, tooltip)
	- info = info || 'Proin eget tortor risus. Donec rutrum congue leo eget'
	- tooltip = tooltip || 'top'
	div(class='tooltip-#{tooltip}')
		span
			| Ayuda
		p #{info}

//- info

mixin tooltip_info(info)
	- info = info || 'Proin eget tortor risus. Donec rutrum congue leo eget'
	- icon = icon || 'info'
	.tooltip_info.open-tooltip(title='')
		i(class="fa fa-#{icon} ")
		div.tooltip
			span
				| Ayuda
			p #{info}

