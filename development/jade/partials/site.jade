mixin icon(icon,size)
    -icon = icon || ''
    -size = size || '1x'
    i(class='fa fa-#{icon} fa-#{size}')

mixin tabs
    ul.tabs
        li
            a.active(href="#") Ver todos
        each val in ['Arriendo', 'Ventas']
